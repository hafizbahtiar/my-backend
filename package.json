{
  "name": "template-backend-hono",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "start": "bun run src/server.ts",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:start:staging": "pm2 start ecosystem.config.js --env staging",
    "pm2:start:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:stop": "pm2 stop my-backend",
    "pm2:restart": "pm2 restart my-backend",
    "pm2:reload": "pm2 reload my-backend",
    "pm2:delete": "pm2 delete my-backend",
    "pm2:logs": "pm2 logs my-backend",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "test": "bun test",
    "lint": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "build": "echo 'No build step required for Bun'",
    "generate:secret": "bun run scripts/generate-jwt-secret.ts",
    "generate:secret:prod": "bun run scripts/generate-jwt-secret.ts --prod",
    "generate:secret:dev": "bun run scripts/generate-jwt-secret.ts --dev",
    "generate:secret:test": "bun run scripts/generate-jwt-secret.ts --test"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@sentry/bun": "^10.22.0",
    "@types/nodemailer": "^7.0.3",
    "agenda": "^5.0.0",
    "argon2": "^0.44.0",
    "google-auth-library": "^10.4.2",
    "hono": "^4.10.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "nodemailer": "^7.0.10",
    "redis": "^5.9.0",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@types/argon2": "^0.15.4",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.97"
  }
}